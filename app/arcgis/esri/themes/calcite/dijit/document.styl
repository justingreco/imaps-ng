/* ======= Styling for the document itself (overriding dojo.css) ======== */

@import "variables";
@import url("../../../../dojo/resources/dojo.css");

.calcite {
  font-family: Verdana, Arial, Helvetica, sans-serif;
  font-size: .688em;
  color: $document-text-color;
}

/* Headings */
.calcite h1 {
	font-size: 1.545em; 
	margin-bottom:0.727em;
}
.calcite h2 {
	font-size: 1.364em; 
	line-height: 1.455em; 
	margin-top:1em; 
	margin-bottom:0.60em;
	font-weight: normal;
}
.calcite h3, .calcite h4, .calcite h5, .calcite h6 {
	font-size:1.091em; 
	font-weight: normal; 
}

/* paragraphs, quotes and lists */
.calcite p {
	line-height: 1.3em;
}

/* pre and code */
.calcite pre, .calcite code {
	font-family:inherit; 
	background-color: $document-shadedsection-background-color; 
	border: 1px solid $document-border-color;
}

/* tables */
.calcite table.dojoTabular thead, .calcite table.dojoTabular tfoot {
	background-color: $document-shadedsection-background-color; 
	border: 1px solid $document-border-color; 
}

